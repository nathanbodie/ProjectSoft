<UserControl x:Class="ProjectSoft.Components.ListViewNewCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProjectSoft.Components"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="270">

    <Grid>
        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="168" Padding="0,0,0,25">+</Label>

        <Border MinWidth="270" MinHeight="360" CornerRadius="30" Background="Transparent">
            <Rectangle Stroke="White" RadiusX="30" RadiusY="30" StrokeDashArray="2,2" StrokeThickness="2" />
        </Border>


    </Grid>

</UserControl>